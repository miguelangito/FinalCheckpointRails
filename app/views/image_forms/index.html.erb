<% content_for :title, t('.title') %>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6"><%= t('.title') %></h1>

  <% if notice.present? %>
    <p class="text-green-500 mb-4"><%= notice %></p> 
  <% end %>

  <div id="image_forms" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    <% @image_forms.each do |image_form| %>
      <div class="flex flex-col"> 
        <%= link_to t('image_forms.index.show_link'), image_form, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        <div style="height: 200px;"> <%= render image_form %> </div> 
      </div>
    <% end %>
  </div>

  <div class="mt-6">
    <%= link_to t('image_forms.index.new_link'), new_image_form_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>